<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="50dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/guestlecture_profilepicIV"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="35dp"
                        app:civ_border_color="@android:color/black"
                        app:civ_border_width="2dp"
                        android:padding="5dp"
                        app:layout_collapseMode="parallax"/>


                    <TextView
                        android:id="@+id/guestlecture_nameTV"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/guestlecture_profilepicIV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="35dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/guestlecture_emailTV"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guestlecture_nameTV"
                        android:layout_alignRight="@+id/guestlecture_profilepicIV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="75dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="-216dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/guestlecture_dateTV"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guestlecture_emailTV"
                        android:layout_alignRight="@+id/guestlecture_profilepicIV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="108dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginRight="-165dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/guestlecture_timeTV"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guestlecture_dateTV"
                        android:layout_alignRight="@+id/guestlecture_profilepicIV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="140dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginRight="-165dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/guestlecture_descTV"
                        android:layout_width="345dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/workshops_imageIV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="190dp"
                        android:layout_marginEnd="16dp"
                        android:textAlignment="textStart"
                        android:textColor="#000" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


</RelativeLayout>